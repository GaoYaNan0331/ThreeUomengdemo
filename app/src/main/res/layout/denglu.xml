<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_tou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ssdk_back_arr"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/phone"
            android:padding="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/edit_deng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入账号"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_yao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/yaoshi"
        android:padding="30dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/edit_mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:padding="20dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_shi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yaoshi"
            android:padding="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <ImageView
           android:id="@+id/image_xinfeng"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/xinfeng"
           android:padding="30dp"
           android:layout_weight="1"
           android:layout_marginLeft="20dp"/>
       <EditText
           android:id="@+id/edit_you"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请输入邮箱密码"
           android:padding="20dp"
           android:layout_weight="1"
           android:layout_marginLeft="20dp"
           android:textSize="25sp"/>
   </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <Button
        android:id="@+id/bu_zhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="注册"
        android:padding="30dp"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/bu_deng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="登录"
        android:padding="30dp"
        android:textSize="20sp"/>
</LinearLayout>

</LinearLayout>
